<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".WithinReachActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/search_map"
            android:maxLines="1"
            android:scrollHorizontally="true" >

            <requestFocus />
        </EditText>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_legend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/legend_walk_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/blue"
            android:contentDescription="@string/mode_descriptor_walk"
            android:padding="@dimen/map_legend_margin"
            android:src="@drawable/walk" />

        <ImageView
            android:id="@+id/legend_bike_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/green"
            android:contentDescription="@string/mode_descriptor_bike"
            android:padding="@dimen/map_legend_margin"
            android:src="@drawable/bike" />

        <ImageView
            android:id="@+id/legend_transit_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/red"
            android:contentDescription="@string/mode_descriptor_transit"
            android:padding="@dimen/map_legend_margin"
            android:src="@drawable/bus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_overview"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="170dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:visibility="gone">

        <Button
            android:id="@+id/slideButton"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="left|center_vertical"
            android:background="#FFFFDB"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:textColor="#091f92"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/place_detail"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_gravity="bottom"
        android:background="#FFFFDB"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"
        android:visibility="gone" 
        >

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="(no name)"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="(no phone)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/place_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="(no rating)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/place_vicinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="(no address)"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/place_close"
        android:layout_width="30dp"
        android:layout_height="86dp"
        android:layout_gravity="bottom|right"
        android:background="#FFFFDB"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/closePlaceButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:text="x" />

    </LinearLayout>

</FrameLayout>